<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <View
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#FFFC00"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="PROFIL"
        android:textColor="#2D2D2D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profil_amanda" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Amanda"
        android:textColor="#2D2D2D"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardProfile" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="amandasyaqirah021226@gmail.com"
        android:textColor="#555555"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintTop_toBottomOf="@id/userEmail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#FFFFFF"
                android:text="Ubah Profil"
                android:textAllCaps="false"
                android:textColor="#FF4081"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/menuMembership"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:text="Membership"
                        android:textColor="#2D2D2D"
                        app:drawableStartCompat="@android:drawable/ic_menu_slideshow" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="15dp"/>

                    <TextView
                        android:id="@+id/menuTantangan"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:text="Tantangan"
                        android:textColor="#2D2D2D"
                        app:drawableStartCompat="@android:drawable/ic_menu_compass" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="15dp"/>

                    <TextView
                        android:id="@+id/menuAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:text="Alamat Tersimpan"
                        android:textColor="#2D2D2D"
                        app:drawableStartCompat="@android:drawable/ic_menu_mylocation" />

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="15dp"/>

                    <TextView
                        android:id="@+id/menuBantuan"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:text="Pusat Bantuan"
                        android:textColor="#2D2D2D"
                        app:drawableStartCompat="@android:drawable/ic_menu_help" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FF5252"
                android:text="Keluar Akun"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textAllCaps="false" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>