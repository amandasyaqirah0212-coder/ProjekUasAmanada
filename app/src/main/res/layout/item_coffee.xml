<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#F5F5DC"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgProduk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kopi"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" /> <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/txtNamaKopi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3E2723"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Nama Kopi" /> <TextView
        android:id="@+id/txtHargaKopi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D84315"
        android:textStyle="bold"
        android:text="Rp 0" />
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>